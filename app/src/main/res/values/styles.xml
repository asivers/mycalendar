<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="top_spinner">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="top_spinner_month" parent="top_spinner">
        <item name="android:gravity">left</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
    </style>
    <style name="top_spinner_year" parent="top_spinner">
        <item name="android:gravity">right</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="spinner_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="month_spinner_header" parent="spinner_header">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="year_spinner_header" parent="spinner_header">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="month_spinner_item">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/gradient_month_bottom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="year_spinner_item">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/green_day_holiday</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="calendar_elt">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="day_of_week_label" parent="calendar_elt">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="day_of_month" parent="calendar_elt">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="year_view_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/year_view_button</item>
        <item name="android:text">@string/year_view</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="year_view_background_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gradient_month_top</item>
        <item name="android:paddingTop">50dp</item>
    </style>
    <style name="year_view_foreground_block">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/year_view_button</item>
        <item name="android:text">@string/year_view</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="year_view_calendar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">4</item>
    </style>
    <style name="month_of_year">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">7</item>
        <item name="android:rowCount">7</item>
    </style>
    <style name="day_of_year">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>