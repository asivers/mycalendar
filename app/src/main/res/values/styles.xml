<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mv_root_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="mv_spinners_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="mv_spinner">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">52dp</item>
        <item name="android:layout_marginBottom">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="mv_spinner_month" parent="mv_spinner">
        <item name="android:gravity">left</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
    </style>
    <style name="mv_spinner_year" parent="mv_spinner">
        <item name="android:gravity">right</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="mv_spinner_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="mv_month_spinner_header" parent="mv_spinner_header">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="mv_year_spinner_header" parent="mv_spinner_header">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="mv_month_spinner_item">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/mv_gradient_bottom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="mv_year_spinner_item">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/myv_green_day_holiday</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="mv_calendar_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">6dp</item>
        <item name="android:columnCount">7</item>
        <item name="android:rowCount">7</item>
    </style>
    <style name="mv_calendar_element">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="mv_day_of_week_label" parent="mv_calendar_element">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="mv_day_button" parent="mv_calendar_element">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="mv_bottom_layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="mv_year_view_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/mv_year_view_button</item>
        <item name="android:text">@string/year_view</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="yv_background_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mv_gradient_top</item>
        <item name="android:paddingTop">30dp</item>
    </style>
    <style name="yv_foreground_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/year_view</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="yv_header_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    <style name="yv_header_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="yv_label" parent="yv_header_element">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">90dp</item>
        <item name="android:text">@string/year_view</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="yv_spinner_year" parent="yv_header_element">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:gravity">right</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="yv_calendar_block">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">4</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="yv_month_cell_with_name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="yv_month_name_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="yv_month_cell">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:columnCount">7</item>
        <item name="android:rowCount">7</item>
    </style>
    <style name="yv_calendar_element">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="yv_day_of_week_label" parent="yv_calendar_element">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="yv_day_cell" parent="yv_calendar_element">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>