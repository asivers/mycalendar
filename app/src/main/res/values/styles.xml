<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="top_spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="calendar_elt">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>
    <style name="day_of_week_label" parent="calendar_elt" />
    <style name="day_of_month" parent="calendar_elt" />
    <style name="bottom_menu_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_lightest</item>
        <item name="android:textColor">@color/grey_darkest</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="year_view_btn" parent="bottom_menu_btn">
        <item name="android:text">@string/year_view</item>
    </style>
    <style name="write_note_btn" parent="bottom_menu_btn">
        <item name="android:text">@string/write_note</item>
    </style>
</resources>