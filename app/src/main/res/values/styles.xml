<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="top_spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="calendar_elt">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:fontFamily">Montserrat</item>-->
    </style>
    <style name="day_of_week_label" parent="calendar_elt">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="day_of_month" parent="calendar_elt">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="bottom_menu_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_menu_btn_background</item>
        <item name="android:textColor">@color/grey_menu_btn_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="year_view_btn" parent="bottom_menu_btn">
        <item name="android:text">@string/year_view</item>
    </style>
    <style name="year_view_calendar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">4</item>
    </style>
    <style name="month_of_year">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:columnCount">7</item>
        <item name="android:rowCount">7</item>
    </style>
    <style name="day_of_year">
        <item name="android:text">00</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="month_view_btn" parent="bottom_menu_btn">
        <item name="android:text">@string/month_view</item>
    </style>
</resources>